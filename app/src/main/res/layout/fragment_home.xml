<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/d_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:layout_marginBottom="27dp"
                android:layout_marginStart="19dp"
                android:text="D-1"
                android:textSize="20dp"
                android:textColor="@color/main_color_FFBF6A"
                android:textStyle="bold"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingTop="41dp"
                android:layout_marginBottom="26dp"
                android:background="@drawable/background_cupcake">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오늘은 좋아하는 걸\n적어보는 건 어때요?"
                    android:textColor="@color/text_color_brown"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="25dp"
                android:padding="20dp"
                android:gravity="center_vertical"
                android:background="@color/main_color_FFF3A0"
                android:clipToPadding="false">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:text="오늘의 기분"
                    android:textColor="@color/text_color_brown"
                    android:textSize="20dp"/>
                <ImageView
                    android:id="@+id/feeling_icon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_smile"/>
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1dp"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/write_btn"
                    android:layout_width="108dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="기록하기"
                        android:textSize="14dp"
                        android:textColor="@color/text_color_brown"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginBottom="21dp"
                android:text="오늘의 문답 모음"
                android:textSize="20dp"
                android:textColor="@color/text_color_brown"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/today_q_n_a_recycler"
                android:layout_width="match_parent"
                android:layout_height="95dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>